{
  "index_patterns": ["mqtt5-validation-*"],
  "template": {
    "settings": {
      "number_of_shards": 3,
      "number_of_replicas": 1,
      "index.lifecycle.name": "mqtt5-validation-policy",
      "index.lifecycle.rollover_alias": "mqtt5-validation"
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "event_type": {
          "type": "keyword"
        },
        "client_type": {
          "type": "keyword"
        },
        "success": {
          "type": "boolean"
        },
        "message_id": {
          "type": "keyword"
        },
        "schema_id": {
          "type": "keyword"
        },
        "topic": {
          "type": "keyword"
        },
        "client_id": {
          "type": "keyword"
        },
        "broker_url": {
          "type": "keyword"
        },
        "application": {
          "type": "keyword"
        },
        "environment": {
          "type": "keyword"
        },
        "hostname": {
          "type": "keyword"
        },
        "sensor_id": {
          "type": "keyword"
        },
        "temperature": {
          "type": "float"
        },
        "error_message": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "error_category": {
          "type": "keyword"
        },
        "broker_geo": {
          "type": "geo_point"
        }
      }
    }
  }
}

